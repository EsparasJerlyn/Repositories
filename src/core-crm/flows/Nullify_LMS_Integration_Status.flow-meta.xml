        <name>Nullify_LMS_Integration_Status_on_Course_Offering</name>
        <label>Nullify LMS Integration Status on Course Offering</label>
        <locationX>176</locationX>
        <locationY>455</locationY>
        <inputAssignments>
            <field>LMS_Integration_Status__c</field>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Nullify_LMS_Integration_Status_on_Course_Connections</targetReference>
        </connector>
        <filterLogic>or</filterLogic>
        <filters>
            <field>hed__Start_Date__c</field>
