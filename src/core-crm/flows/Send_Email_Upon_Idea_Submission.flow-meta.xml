    <apiVersion>52.0</apiVersion>
    <constants>
        <name>QUTeXEmail</name>
        <dataType>String</dataType>
        <value>
            <stringValue>qutex@qut.edu.au</stringValue>
        </value>
    </constants>
    <decisions>
        <name>Is_Idea_for_Qualification</name>
        <label>Is Idea for Qualification?</label>
        <locationX>573</locationX>
        <locationY>148</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior.Stage__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Idea</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Stage__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Qualify</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record__Prior.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Idea Sent</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Qualification</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordTypeId</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Get_OPE_Record_Type.Id</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Send_Email_to_Requestor</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description>Flow that sends an email to the requestor and owner if the Product Specification has been updated (indicating that a form has been submitted).</description>
    <formulas>
        <name>ProductSpecificationURL</name>
        <dataType>String</dataType>
        <expression>LEFT($Api.Enterprise_Server_URL_510, FIND( &apos;/services&apos;, $Api.Enterprise_Server_URL_510)) &amp; {!$Record.Id}</expression>
    </formulas>
    <interviewLabel>Send Email Upon Idea Submission {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Send Email Upon Idea Submission</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
