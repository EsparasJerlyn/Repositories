    <decisions>
        <description>Check if account related in ACR is an administrative account.</description>
        <name>Is_Administrative_Account</name>
        <label>Is Administrative Account?</label>
        <locationX>270</locationX>
        <locationY>1271</locationY>
        <defaultConnector>
            <targetReference>ACR_Loop</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>IsAdministrativeAccount</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>ACR_Loop.Account.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Administrative</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Delete_Account</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
