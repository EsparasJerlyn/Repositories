<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Description_is_Required</fullName>
    <active>true</active>
    <description>Description field is required.</description>
    <errorConditionFormula>AND(
    OR (
      ISNEW(),
      ISCHANGED(Description__c)
    ),
    ISBLANK( Description__c ))</errorConditionFormula>
    <errorDisplayField>Description__c</errorDisplayField>
    <errorMessage>Mandatory Field</errorMessage>
</ValidationRule>
