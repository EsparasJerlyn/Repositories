<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Asset_Type_is_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    OR (
      ISNEW(),
      ISCHANGED(Asset_Type__c)
    ),
    ISPICKVAL(Asset_Type__c, &apos;&apos;))</errorConditionFormula>
    <errorDisplayField>Asset_Type__c</errorDisplayField>
    <errorMessage>Please select a choice.</errorMessage>
</ValidationRule>
