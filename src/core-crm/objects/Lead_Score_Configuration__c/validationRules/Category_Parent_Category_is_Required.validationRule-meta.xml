<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Category_Parent_Category_is_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND( RecordType.DeveloperName = &quot;Category&quot;,  OR( ISBLANK( Parent_Category__c ) ,  Parent_Category__r.RecordType.DeveloperName != &quot;Configuration&quot;))</errorConditionFormula>
    <errorDisplayField>Parent_Category__c</errorDisplayField>
    <errorMessage>Parent Category is required for Category record type</errorMessage>
</ValidationRule>
