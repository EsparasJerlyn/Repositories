<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Requestor_is_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND (
ISCHANGED(Stage__c),
ISPICKVAL(Stage__c, &quot;Identify&quot;),
ISBLANK(Requestor_Name__c)
)</errorConditionFormula>
    <errorDisplayField>Requestor_Name__c</errorDisplayField>
    <errorMessage>Mandatory Field</errorMessage>
</ValidationRule>
