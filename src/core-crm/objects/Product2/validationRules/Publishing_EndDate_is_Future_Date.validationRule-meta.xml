<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Publishing_EndDate_is_Future_Date</fullName>
    <active>true</active>
    <description>Publishing end date should be greater than the current date.</description>
    <errorConditionFormula>OR(
 AND(ISNEW(),NOT(ISBLANK(Publishing_End_date__c)),TODAY()&gt;= 
 Publishing_End_date__c),
 AND(ISCHANGED(Publishing_End_date__c),TODAY() &gt;= 
 Publishing_End_date__c)
)</errorConditionFormula>
    <errorDisplayField>Publishing_End_date__c</errorDisplayField>
    <errorMessage>Current date should be less than the publishing end date.</errorMessage>
</ValidationRule>
