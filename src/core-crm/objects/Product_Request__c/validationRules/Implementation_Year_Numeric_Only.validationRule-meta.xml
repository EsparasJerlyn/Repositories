<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Implementation_Year_Numeric_Only</fullName>
    <active>true</active>
    <description>Checks implementation year if input is non-numeric</description>
    <errorConditionFormula>AND (
  NOT (ISBLANK(Implementation_Year_v2__c ) ),
  NOT( ISNUMBER( Implementation_Year_v2__c ) )
 )</errorConditionFormula>
    <errorDisplayField>Implementation_Year_v2__c</errorDisplayField>
    <errorMessage>Please enter numbers only.</errorMessage>
</ValidationRule>
