<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Number_of_Participant_Per_Group_required</fullName>
    <active>true</active>
    <description>Number of Participant (Per Group) is required if Cohort Type is Group to move the status from define to design.</description>
    <errorConditionFormula>AND(
RecordType.DeveloperName =&apos;Coaching_Request&apos;,
ISCHANGED(Product_Request_Status__c),
ISPICKVAL(PRIORVALUE(Product_Request_Status__c),&apos;Define&apos;),
ISPICKVAL(Product_Request_Status__c, &apos;Design&apos;),
ISPICKVAL(Cohort_Type__c,&apos;Group&apos;),
ISBLANK(Number_Of_Participants_Per_Group__c)
)</errorConditionFormula>
    <errorDisplayField>Number_Of_Participants_Per_Group__c</errorDisplayField>
    <errorMessage>“Number of Participants (Per Group)” is required to update the Product Request Status.</errorMessage>
</ValidationRule>
