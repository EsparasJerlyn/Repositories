<aura:component
  implements="flexipage:availableForAllPageTypes,lightning:actionOverride,force:lightningQuickAction,force:hasRecordId,lightning:isUrlAddressable"
  access="global">
  <!-- Declare the attribute to hold the flowApiName -->
  <aura:attribute
    name="flowApiName"
    type="String"
    default="New_Opportunity_Outcome" />
  <aura:attribute name="inputVariables" type="Object[]" />
  <aura:attribute name="hasRecord" type="Boolean" />
  <aura:handler name="init" value="{!this}" action="{!c.init}" />

  <aura:if isTrue="{!v.hasRecord}">
    <!-- Call the flowContainer Aura component and pass the flowApiName -->
    <c:flowContainer
      flowApiName="{!v.flowApiName}"
      inputVariables="{!v.inputVariables}" />
  </aura:if>
</aura:component>
