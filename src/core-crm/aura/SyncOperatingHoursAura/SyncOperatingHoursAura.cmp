<aura:component controller="AmazonHttpCallout" implements="force:hasRecordId,force:lightningQuickActionWithoutHeader">
    <aura:attribute name="recordId" type="String"/>   
    <aura:handler name="init" value="{! this }" action="{! c.doInit }"/>
    <div class="slds-is-relative" style="height:8rem">
        <br/>
        <lightning:spinner alternativeText="Loading" size="large" />
    </div>
</aura:component>